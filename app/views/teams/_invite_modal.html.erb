<div id="invite_team_modal" class="modal">
  <div class="modal-content">
    <div class="row">
      <%= form_tag(controller: "teams", action: "invite", method: :post, class: "col s12") do %>
        <div class="row">
          <div class="col s12">
            <h4>Convidar para o seu Time</h4>
          </div>
          <div class="input-field col s12">
            <%= text_field(:email, :slug) %>            
            <%= submit_tag("Convidar!", class: "btn right") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
